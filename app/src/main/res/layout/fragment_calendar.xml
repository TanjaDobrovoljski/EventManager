<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalendarFragment"
    android:layout_marginTop="@dimen/margin_list_separator"

    >

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:theme="@style/CustomCalendarView"
        app:mcv_headerTextAppearance="@style/CustomCalendarViewMonth"
        app:mcv_weekDayTextAppearance="@style/CustomCalendarViewMonth"
        app:mcv_dateTextAppearance="@style/CustomCalendarViewDate"/>



</FrameLayout>