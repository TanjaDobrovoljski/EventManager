<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light Theme Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorSecondary">@color/complementary_color</item>
        <item name="colorSecondaryVariant">@color/complementary_dark</item>
        <item name="colorSecondaryContainer">@color/complementary_light</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="materialButtonStyle">@style/CustomMaterialButtonStyle</item>
    </style>


    <style name="CustomMaterialButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="backgroundTint">@color/complementary_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="CustomMaterialListStyle" parent="Theme.AppCompat">

        <item name="android:padding">@dimen/button_list_padding</item>
        <item name="android:textSize">@dimen/child_text_size</item>

        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="CustomListItemStyle">
        <item name="android:background">@drawable/list_item_background</item> <!-- Set the background drawable -->
    </style>

    <style name="CustomListItemTitleStyle">
        <item name="android:background">@drawable/list_title_background</item> <!-- Set the background drawable -->
    </style>

    <style name="CustomToolbarStyle" >
        <item name="android:colorBackground">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/color_on_primary</item>
        <item name="android:textColorSecondary">@color/color_on_secondary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="popupMenuBackground">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/color_on_primary</item>
    </style>

    <style name="CustomCalendarView" parent="@android:style/Widget.CalendarView">

        <item name="android:radius">8dp</item>
    </style>

    <style name="CustomCalendarViewStyle" parent="@android:style/Widget.CalendarView">
        <item name="android:background">@drawable/list_item_background</item>
    </style>


</resources>
